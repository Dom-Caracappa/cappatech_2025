---
import ContactForm from "./ContactForm.jsx";
---

<!-- Contact Section -->
<section
    class="flex mb-16 justify-center rounded-md border border-orange-500 shadow-2xl shadow-black items-center py-16 px-4 bg-gray-900 text-white"
>
    <div
        class="bg-gray-800 shadow-lg rounded-2xl p-8 w-full max-w-lg transition-transform duration-300 hover:-translate-y-1 hover:shadow-xl"
    >
        <!-- Heading -->
        <h2 class="text-3xl font-bold text-orange-500 text-center">
            Get in Touch
        </h2>
        <p class="text-gray-300 text-center mt-2">
            Have questions or want to work together? Drop us a message!
        </p>

        <!-- Contact Form Component -->
        <div class="mt-6">
            <ContactForm client:visible />
        </div>

        <!-- Additional Contact CTA -->
        <div class="text-center mt-6">
            <p class="text-gray-400">Prefer direct email?</p>
            <a
                href="mailto:hello@yourcompany.com"
                class="mt-2 inline-block text-orange-400 hover:text-orange-300 transition-colors text-lg font-semibold"
            >
                info@cappatech.net
            </a>
        </div>
    </div>
</section>
