<!-- src/components/NavBar.astro -->
<script src="https://cdn.jsdelivr.net/npm/alpinejs@3.x.x/dist/cdn.min.js" defer
></script>

<nav
    x-data="{ open: false }"
    class="relative mx-[24px] flex items-center justify-between rounded-md bg-black px-4 py-3 shadow-md h-16 fixed top-4 left-0 right-0 z-50"
>
    <!-- Left section: Logo (clickable) -->
    <div class="flex items-center space-x-2">
        <a href="www.cappatech.net">
            <img
                src="public/navlogo.png"
                alt="Logo"
                class="h-10 md:h-12 w-auto object-contain rounded"
            />
        </a>
        <div class="h-6 border-l-2 border-gray-400 mx-3"></div>
    </div>

    <!-- Mobile Menu Button -->
    <div class="md:hidden">
        <button @click="open = !open" class="text-white focus:outline-none">
            <svg
                class="w-6 h-6"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
                xmlns="http://www.w3.org/2000/svg"
            >
                <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M4 6h16M4 12h16m-7 6h7"></path>
            </svg>
        </button>
    </div>

    <!-- Mobile Dropdown Menu -->
    <div
        x-show="open"
        @click.away="open = false"
        class="absolute top-16 left-0 w-full bg-black rounded-md shadow-md md:hidden transition-all duration-300 ease-in-out"
    >
        <ul class="flex flex-col items-center space-y-4 py-4">
            <li>
                <a href="#services" class="text-white hover:text-gray-300"
                    >Services</a
                >
            </li>
            <li>
                <a href="#pricing" class="text-white hover:text-gray-300"
                    >Pricing</a
                >
            </li>
            <li>
                <a href="#contact" class="text-white hover:text-gray-300"
                    >Contact</a
                >
            </li>
            <li>
                <a href="/blog" class="text-white hover:text-gray-300">Blog</a>
            </li>
        </ul>
    </div>

    <!-- Desktop Navigation Links -->
    <ul class="hidden md:flex items-center space-x-4">
        <li>
            <a href="#services" class="text-white hover:text-gray-300"
                >Services</a
            >
        </li>
        <li>
            <a href="#pricing" class="text-white hover:text-gray-300">Pricing</a
            >
        </li>
        <li>
            <a href="#contact" class="text-white hover:text-gray-300">Contact</a
            >
        </li>
        <li><a href="/blog" class="text-white hover:text-gray-300">Blog</a></li>
    </ul>
</nav>
